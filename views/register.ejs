          <form method="POST" action="/user">
            <input type="username" class="form-control mr-sm-2 my-2 my-sm-3" name="username" placeholder="username">
            <input type="email" class="form-control mr-lg-5 my-5 my-sm-3" name="email" aria-describedby="emailHelp" placeholder="email">
            <input type="password" class="form-control mr-sm-2 my-2 my-sm-3" name="password" placeholder="password">
            <button type="submit" class="form-control btn btn-outline-info my-2 my-sm-0">Register</button>
          </form>
        </div>
      </div>
