<!DOCTYPE html>
<html lang="en">

    <% include ./partials/_header %>    
    
    <body>
        <section id="contain-resources">
            <div id="new-resources" class="justify-content-center d-flex align-items-center">
                <div class="card text-center bg-white" style="min-width: 33rem">
                <div class="card-header"><h3>Update your resource</h3></div>
                    <div class="card-body">
                        <form method="POST" action="/:resource_id/edit">
                            <input type="url" class="form-control mr-lg-5 my-5 my-sm-3" name="url" placeholder="Resource URL">
                            <div class="form-group">
                                <label id="category-menu" for="category">Select catergory from list</label>
                                <select name="category" class="form-control" id="category">
                                    <option>Food</option>
                                    <option>DIY and Crafts</option>
                                    <option>Home Decor</option>
                                    <option>Health and Fitness</option>
                                    <option>Sports</option>
                                    <option>Travel</option>
                                    <option>Technology</option>
                                    <option>Kids</option>
                                    <option>Entertainment</option>
                                    <option>Other</option>
                                </select>
                            </div>
                            <input type="text" class="form-control mr-sm-2 my-2 my-sm-3" name="title" placeholder="Edit resource title">
                            <textarea name="description" class="form-control mr-sm-2 my-2 my-sm-3" id="description_text" placeholder="Edit resource description"></textarea>
                            <button type="submit" class="form-control btn btn-outline-info my-2 my-sm-0">Update resource</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    <% include ./partials/_footer %>    

  </body>
</html>